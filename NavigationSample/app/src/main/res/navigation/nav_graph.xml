<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/oneFragment">

    <fragment
            android:id="@+id/oneFragment"
            android:name="kaleidot725.navigationsample.OneFragment"
            android:label="fragment_one"
            tools:layout="@layout/fragment_one" >
        <action
                android:id="@+id/action_oneFragment_to_twoFragment"
                app:destination="@id/twoFragment" />
    </fragment>
    <fragment
            android:id="@+id/twoFragment"
            android:name="kaleidot725.navigationsample.TwoFragment"
            android:label="fragment_two"
            tools:layout="@layout/fragment_two" >
        <action
                android:id="@+id/action_twoFragment_to_threeFragment"
                app:destination="@id/threeFragment" />
    </fragment>
    <fragment
            android:id="@+id/threeFragment"
            android:name="kaleidot725.navigationsample.ThreeFragment"
            android:label="fragment_three"
            tools:layout="@layout/fragment_three" >
        <action
                android:id="@+id/action_threeFragment_to_oneFragment2"
                app:destination="@id/oneFragment" />
    </fragment>
</navigation>